{
    "cSpell.words": [
        "angularfire",
        "appspot",
        "attranslate",
        "codelyzer",
        "dbmodel",
        "devall",
        "firestore",
        "predeploy",
        "webstorage"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        ".vscode-insiders",
        "src/environments/firebaseConfig.ts",
        "webapp/src/assets/i18n/hu.json"
    ],
    "eslint.workingDirectories": [
        {
            "directory": "webapp",
            "changeProcessCWD": true
        }
    ],
    "files.associations": {
        "database.rules.json": "jsonc",
        "firebase.json": "jsonc",
        "firestore.*.json": "jsonc",
        ".firebaserc": "jsonc"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "webapp/.firebase": true,
        "webapp/node_modules": true,
        "webapp/*.log": true,
        "webapp/functions/lib": true,
        "webapp/functions/node_modules": true,
        "**/*.spec.ts": true, // Hide tests
    },
    "terminal.integrated.cwd": "webapp",
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "emu",
                    "commands": [
                        "cd webapp; npm run dev" // firebase emulators
                    ]
                },
                {
                    "name": "client",
                    "commands": [
                        "cd webapp; npm run dev2" // watch-build client
                    ]
                },
                {
                    "name": "func",
                    "commands": [
                        "cd webapp; npm run dev3" // watch-build functions
                    ]
                }
            ]
        }
    ],
}